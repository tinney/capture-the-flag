%table.table
  %tr
    %td Team
    %td Name
    %td Point
    %td Peg Catpures
    %td Flag Returns
    %td Flag Pickups
    %td Flag Captures
  - @players.each do |player|
    %tr
      %td= player.team.name
      %td= player.name
      %td= player.points
      %td= player.grouped_awards["Peg Capture"]&.count
      %td= player.grouped_awards["Flag Return"]&.count
      %td= player.grouped_awards["Flag Pickup"]&.count
      %td= player.grouped_awards["Flag Capture"]&.count